<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.example.sneha.singlescreenapp.MainActivity" >

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agraj Food Processors"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textColor="#FF4500"
        android:textSize="25sp"
        android:textStyle="italic|bold" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/agraj34"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It is a processor-based product manager, established on January 21, 1998. The 20-square-foot business has expanded into the 5,000-square-foot restaurant. There are a variety of types, usually 100 types of pakkalike packs."
        android:scrollbars="vertical"
        android:layout_toRightOf="@id/image1"
        android:layout_alignTop="@id/image1"
        android:layout_alignBottom="@id/image1"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Information"
        android:textColor="#ffffff"
        android:background="#FF4500"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/image1"
        android:layout_alignLeft="@id/image1"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website : http://www.agrajfoodprocessors.net/"
        android:textColor="#000000"
        android:layout_below="@id/text3"
        android:layout_alignLeft="@id/text3"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone : 020 2544 2414"
        android:textColor="#000000"
        android:layout_below="@id/text4"
        android:layout_alignLeft="@id/text4"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address : Samarth Rd, Mahadeo Sadan, Raghukul Society, Ganesh Nagar, Karve Nagar, Pune, Maharashtra 411052"
        android:textColor="#000000"
        android:layout_below="@id/text5"
        android:layout_alignLeft="@id/text5"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hours Open : 9:30 AM to 9 PM "
        android:textColor="#000000"
        android:textStyle="italic|bold"
        android:layout_below="@id/text6"
        android:layout_alignLeft="@id/text6"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open ALL 7  days"
        android:textColor="#ffffff"
        android:background="#FF4500"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

</RelativeLayout>
